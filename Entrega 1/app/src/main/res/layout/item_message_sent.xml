<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_message_body_sent"
        android:text="hello, hello!"
        android:background="@drawable/rounded_rectangle_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf= "parent"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/text_message_time_sent"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@id/text_message_body_sent"
        app:layout_constraintRight_toLeftOf="@id/text_message_body_sent"/>

    <TextView
        android:id="@+id/checks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/text_message_body_sent"
        app:layout_constraintLeft_toRightOf="@id/text_message_body_sent"
        android:text="..."/>

</android.support.constraint.ConstraintLayout>